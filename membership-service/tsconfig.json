{
    "noImplicitThis": "false",
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "incremental": true,
        "types": ["jest"],
        "typeRoots": ["node_modules/@types"]
