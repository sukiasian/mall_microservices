{
    "noImplicitThis": "false",
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "incremental": true,
        "types": ["jest"],
        "typeRoots": ["node_modules/@types"],
    },
	"exclude": ["node_modules", "dist", "tests/*"],
	"include": ["**/*"]
}

